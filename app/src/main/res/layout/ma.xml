<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/maa">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#7F8D8E">


        <Button

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="পিছনে"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape"
            android:onClick="sendBack"/>


        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="মায়ের পরিচর্যা"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFF"
            />

        <Button
            android:id="@+id/ho"

            android:text="হোম"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:layout_marginLeft="8dp"
            android:shadowRadius="5"
            android:onClick="sendHome"
            />


    </LinearLayout>

    <Button
        android:id="@+id/purbe"

        android:text="পূর্বে(শিশু জন্মের)"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_width="198dp"
        android:layout_height="100dp"
        android:background="@drawable/shape2"
        android:onClick="sendBefore"/>

    <Button
        android:id="@+id/pore"

        android:text="পরে(শিশু জন্মের)"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_width="191dp"
        android:layout_height="100dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/shape2"
        android:layout_gravity="right"
        android:onClick="sendAfter"
        />

    <Button
        android:id="@+id/joruri"

        android:text="জরুরী যোগাযোগ"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_width="197dp"
        android:layout_height="100dp"
        android:background="@drawable/shape2"
        android:onClick="sendEmergency"
        />

    <Button
        android:id="@+id/angry_btn"

        android:text="চেক আপ"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginTop="1dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/buttonshape"
        android:layout_marginRight="20dp"
        android:shadowRadius="5"
        android:layout_gravity="right"
        android:onClick="sendCheck"
        />




</LinearLayout>